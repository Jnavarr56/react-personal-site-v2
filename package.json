{
	"name": "react-personal-site-v2",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^4.2.4",
		"@testing-library/react": "^9.3.2",
		"@testing-library/user-event": "^7.1.2",
		"react": "^16.12.0",
		"react-dom": "^16.12.0",
		"react-scripts": "3.3.0",
		"styled-components": "^5.0.0"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"prettier": "prettier --write $npm_package_config_fixables",
		"eslint": "eslint --fix $npm_package_config_fixables"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"lint-staged": {
		"src/**/*.{js,jsx,json}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		],
		"public/**/*.{js,jsx,json}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		],
		"*.{js,jsx,json}": [
			"prettier --write",
			"eslint --fix",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"config": {
		"fixables": "*.*(json|js|jsx) src/**/*.*(json|js|jsx)"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-json": "^2.0.1",
		"husky": "^3.0.9",
		"lint-staged": "^9.4.2",
		"prettier": "^1.18.2"
	}
}
